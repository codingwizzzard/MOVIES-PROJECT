<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZEE5 - Add Page</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- css -->
    <link rel="stylesheet" href="../assets/css/add.css">
</head>

<body>
    <!-- Header starts -->
    <%- include('./partials/header.ejs') %>
        <!-- Header ends -->
        <main class="border-primary">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <h1 class="text-primary">Add Book</h1>
                        <form action="/add" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label">Name:</label>
                                <input type="text" class="form-control" id="name" name="name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description:</label>
                                <input type="text" class="form-control" id="description" name="description">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Time:</label>
                                <input type="text" class="form-control" id="time" name="time">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Rating:</label>
                                <select class="form-select" id="ratings" name="rating">
                                    <option selected disabled>-- Select Rating --</option>
                                    <% let ratings=['⭐', '⭐⭐' , '⭐⭐⭐' ,'⭐⭐⭐⭐','⭐⭐⭐⭐⭐']; ratings.map(rating=> { %>
                                        <option value="<%= rating %>">
                                            <%= rating %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Genre:</label>
                                <select class="form-select" id="genre" name="genre">
                                    <option selected disabled>-- Select Genre --</option>
                                    <% let genres=['Action', 'Comedy' , 'Drama' , 'Horror' , 'Romance' , 'Biography', 'Crime' ] 
                                    genres.map(genre=> {
                                        %>
                                        <option value="<%= genre %>">
                                            <%= genre %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Image:</label>
                                <input type="file" class="form-control" id="image" name="image">
                            </div>

                            <button type="submit" class="btn btn-primary">Add Book</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>